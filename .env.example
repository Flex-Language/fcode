# OpenRouter Configuration
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter API base URL (default: https://openrouter.ai/api/v1)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# HTTP Referer header for OpenRouter requests (helps with app visibility)
OPENROUTER_HTTP_REFERER=https://github.com/your-username/flex-ai-agent

# Application title shown in OpenRouter dashboard
OPENROUTER_APP_TITLE=Flex AI Agent

# Flex Programming Language Configuration
# Path to Flex CLI executable (ensure flex is installed and accessible)
FLEX_CLI_PATH=flex

# Directory for storing generated Flex code examples
FLEX_EXAMPLES_DIR=./flex_examples

# Temporary directory for Flex file operations
FLEX_TEMP_DIR=./temp

# Supported Flex file extensions (comma-separated)
FLEX_FILE_EXTENSIONS=.flex,.lx,.txt

# Application Settings
# Maximum code length per CLAUDE.md requirements (50-2000 lines)
MAX_CODE_LENGTH=500

# Execution timeout for Flex programs (5-300 seconds)
EXECUTION_TIMEOUT=30

# Enable file read/write operations (true/false)
ENABLE_FILE_OPERATIONS=true

# Model metadata cache duration in seconds (300-86400)
MODEL_CACHE_DURATION=3600

# Default OpenRouter model to use
DEFAULT_MODEL=anthropic/claude-3-5-sonnet

# Development Settings (optional)
# Enable debug mode for development
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable verbose logging
VERBOSE=false